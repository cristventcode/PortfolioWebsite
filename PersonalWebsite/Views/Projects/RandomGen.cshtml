@Styles.Render("~/Content/randomgen-styles.css")
<br />
<main class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4> Set Min and Max </h4>
                </div>
                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <label for="setMin"> Min </label>
                            <input type="text" id="setMin" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="setMax"> Max </label>
                            <input type="text" id="setMax" class="form-control">
                        </div>
                    </form>
                    <br>
                    <button class="btn" id="enter-button"> Get Winner </button>
                    <button class="btn" id="reset-button"> Reset </button>
                </div>
            </div>
        </div>
        <div id="winner-holder" class="col-md-9 hidden">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="col-md-12">
                        <span id="winner"> </span>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4> All Numbers </h4>
                            </div>
                            <div class="panel-body">
                                <ul id="total-list" class="list-inline"></ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4> Winners </h4>
                            </div>
                            <div class="panel-body">
                                <ul id="won-list" class="list-inline"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>

@section Scripts{
    @Scripts.Render("~/Scripts/randomgen/randomgen.js")    
}